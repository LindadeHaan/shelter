<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="index.css">
  <title>Add an animal</title>
</head>

<body>
<h1>Add an animal</h1>
<!-- <%= typeof msg != 'undefined' ? msg : '' %> -->
    <form action="/" method="post">
    <!-- enctype=multipart/form-data -->
      <label>Name <input type="text" name="name" value="Webster"> </label>

      <label>
    Photo
    <input name=cover type=file accept=image/*>
    </label>


      <label>Type<select name="type">
                  <option value="dog">Dog</option>
                  <option value="cat">Cat</option>
                  <option value="rabbit">Rabbit</option> </select></label>


      <label>Place<select name="place">
                  <option value="Brooklyn Animal Care Center">Brooklyn Animal Care Center</option>
                  <option value="Manhattan Animal Care Center">Manhattan Animal Care Center</option>
                  <option value="Staten Island Animal Care Center">Staten Island Animal Care Center</option> </select> </label>

      <label>Description <input type="text" name="description" value="Sweet and loving animal"> </label>

      <label>Sex<select name="sex">
                  <option value="male">Male</option>
                  <option value="female">Female</option> </select> </label>


      <label>Age <input type="number" name="age" value="2"></label>
      <label>Size<select name="size">
                  <option value="small">Small</option>
                  <option value="medium">Medium</option>
                  <option value="large">Large</option> </select> </label>


      <label>Length<select name="length">
                  <option value="short">Short</option>
                  <option value="medium">Medium</option>
                  <option value="long">Long</option> </select> </label>

      <label>Vaccinated? <input type="radio" name="vaccinated" value="true"> Yes
                          <input type="radio" name="vaccinated" value="false"> No </label>

      <label>Declawed? <input type="radio" name="declawed" value="true"> Yes
                        <input type="radio" name="declawed" value="false"> No </label>

      <label>Coat<select name="coat">
                        <option value="thick">Thick</option>
                        <option value="smooth">Smooth</option> </select></label>


      <label>Primary Color <input type="text" name="primaryColor" value="White"> </label>

      <label>Secondary Color <input type="text" name="secondaryColor" value="Grey"> </label>

      <label>Weight <input type="number" name="weight" value="4"> </label>

      <label>Intake Date <input type="date" name="intake" value="dd-mm-yyyy"> </label>

      <button type="submit">Submit</button>
    </form>

</body>

</html>
